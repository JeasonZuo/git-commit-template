result=$(echo $status | grep "command not found")
if [ "$result" != "" ]
then
    echo -e "\033[31m Please install git \033[0m"
    exit 0
fi

BIN_DIR="/usr/local/bin/"
GIT_FILE="/usr/local/bin/git"
if [ ! -d "$BIN_DIR" ]; then
  mkdir "$BIN_DIR"
fi

if [ ! -f "$GIT_FILE" ]; then
  touch "$GIT_FILE"
  chmod +x "$GIT_FILE"
else
  echo -e "\033[31m The file $GIT_FILE exist \033[0m"
fi

curl https://raw.githubusercontent.com/JeasonZuo/git-commit-template/develop/git > $GIT_FILE